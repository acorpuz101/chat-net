div.container
  #chatRow.row
    #users.col-sm-3
      h5 Active Users
      hr
    #messageArea.col-sm-9
      ul#messages
  form#form(action="", autocomplete="off").row
    input#input
    input#siofu_input(type="file")
    button#formSubmit Send
  .modal.fate#settingsModal(tabindex="-1", aria-labelledby="settingsModal", aria-hidden="true")
    .modal-dialog.modal-dialog-centered
      .modal-content
        .modal-header
          h5.modal-title#settingsModalLabel Change User Name
          button(type="button", data-bs-dismiss="modal", aria-label="Close").btn-close
        .modal-body
          input#currentUserInput(autocomplete="off")
        .modal-footer
          button(type="button", data-bs-dismiss="modal", onclick="chatFunctions.change()").btn.btn-primary Save
          button(type="button", data-bs-dismiss="modal").btn.btn-secondary Close
